<?xml version="1.0" encoding="utf-8"?>



        <!-- Ignore ContentDescription because it is kind of meaningless to have TTS read out "App icon"
             when it will inevitably read out the name of the app straight after. -->

        <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="150dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/icon_card_view2"
        android:layout_width="100dip"
        android:layout_margin="2dp"
        android:layout_height="100dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:scaleType="fitCenter"
            android:transitionName="@string/transition_app_item_icon"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_launcher" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:padding="2dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="?android:textColorPrimary"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/icon_card_view2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/icon_card_view2"
        app:layout_constraintTop_toBottomOf="@+id/icon_card_view2"
        tools:text="F-Droid An application summary which takes up too much space and must ellipsize" />
        </androidx.constraintlayout.widget.ConstraintLayout>

